doctype html
html(lang="no")
    head
        meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no, viewport-fit=cover")
        title Trumf
        style.
            body, html {
                height: 100vh;
                font-family: Helvetica, Arial, sans-serif;
                width: 100vw;
                font-weight: 400;
                margin: 0;
                padding: 0;
                overflow:hidden;
                background: #CC092F;
            }

            div {
                margin: 0;
                position: absolute;
                top: 50%;
                display:block;
                left: 50%;
                transform: translate(-50%, -50%);
                text-align: center;
                width: 75vw;
            }

            h1 {
                font-size: 20vw;
                margin: 0;
                white-space: nowrap;
                color: #FFF;
                line-height: .91;
                font-weight: 900;
            }

            p {
                font-size: 1.5em;
                opacity: .6;
                margin: 0;
                color: #FFF;
                display:block;
                margin-top: 1em;
            }
    body
        div
            h1 Ojsann!
            p Noe gikk fryktelig galt.
